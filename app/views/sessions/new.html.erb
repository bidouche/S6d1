 <% content_for :navbar do %>
      <%= render 'layouts/loginheader' %>
 <% end %>

<div class="content">
  <%= form_for(:user, url: users_path) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign In</h5>
            <form class="form-signin">
            	<div class="form-label-group">
              <%= f.text_field :first_name, class: 'form-control',placeholder: "first name", id: "first_name" %>
              <label for="first_name">first_name</label>
              </div>
               <div class="form-label-group">
                <%= f.text_field :last_name, class: 'form-control', placeholder: "last_name", id: "last_name" %>
                <label for="last_name">Last name</label>
              </div>
              <div class="form-label-group">
                <%= f.email_field :email, class: 'form-control', placeholder: "Email", id: "email" %>
                <label for="email">Email</label>
              </div>
             
              
      <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
      <% end %>
      </form>
    </div>
  </div>
</div>
</div>
</div>
</div>
