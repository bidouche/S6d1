<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= form_for(:session, url: login_path, :html => {:class => 'form-inline my-2 my-lg-0'}) do |f| %>
      <%= f.email_field :email, class: 'form-control mr-sm-2', placeholder:'Email'  %>
      <%= f.text_field :last_name, class: 'form-control mr-sm-2', placeholder:'Last name' %>
      <%= f.submit "Log in", class: "btn btn-outline-success my-2 my-sm-0" %>
       <%= f.label :remember_me, class: "checkbox inline", id: "checkbox" do %>
       <%= f.check_box :remember_me %>
        <span> Remember me </span>
      <% end %>
     <% end %>
    </nav>
</div>